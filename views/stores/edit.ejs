<% include ../partials/header %>

<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/stores">Stores</a></li>
    <li><a href="/stores/<%= store._id %>"><%= store.name %></a></li>
    <li class="active">Edit</li>
  </ol>

  <div class="row">
    <h1>Edit <%= store.name %></h1>
    <form action="/stores/<%= store._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="editName">Name</label>
        <input class="form-control" id="editName" type="text" name="name" value="<%= store.name %>">
      </div>
      <div class="form-group">
        <label for="editAddress">Address</label>
        <input class="form-control" id="editAddress" type="text" name="address" value="<%= store.address %>">
      </div>
      <div class="form-group">
        <label for="editDescription">Description</label>
        <input class="form-control" id="editDescription" type="text" name="description" value="<%= store.description %>">
      </div>
      <div class="form-group">
        <label for="editImage">Image URL</label>
        <input class="form-control" id="editImage" type="text" name="image" value="<%= store.image %>">
      </div>
      <div class="form-group">
        <button class="btn btn-large btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="row">
    <form id="deleteStoreForm"
          action="/stores/<%= store._id %>?_method=DELETE" 
          method="POST">
      <button class="btn btn-large btn-danger">Delete This Store</button>
    </form>
  </div>
</div>


<% include ../partials/footer %>