<% include ../partials/header %>

<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/stores">Stores</a></li>
    <li class="active">Add a Store</li>
  </ol>
  <h1>Add a store to the database</h1>

  <form action="/stores" method="POST">
    <div class="form-group">
      <label for="storeName">Store Name</label>
      <input type="text" class="form-control" id="storeName" placeholder="Brenda's Brewhouse" name="name">
    </div>
    <div class="form-group">
      <label for="storeImage">Image URL</label>
      <input type="text" class="form-control" id="storeImage" placeholder="https://some.image.host/a1b2c3.jpg" name="image">
    </div>
    <div class="form-group">
      <label for="storeDescription">Description</label>
      <input type="text" class="form-control" id="storeDescription" placeholder="This place has the best selection in town!" name="description">
    </div>
    <div class="form-group">
      <label for="storeAddress">Address</label>
      <input type="text" class="form-control" id="storeAddress" placeholder="123 Main Street, Anytown, USA" name="address">
    </div>
    <button class="btn btn-primary">Add Store</button>
  </form>

<% include ../partials/footer %>